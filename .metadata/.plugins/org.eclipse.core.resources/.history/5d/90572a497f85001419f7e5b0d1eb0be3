			String [] goodInput = {"Brock", "Misty", "Surge", "Erica", "Sabrina", "Koga", "Blaine", "Giovanni", "Blue", "Red"};
				Scanner scan = new Scanner(commandlist);
				String answers = null;
		
				while(scan.hasNext()){
					answers = scan.next();
					if(answers.equals(goodInput)){   
						break;
					}
				}
				if(answers.equals("Command List")){
					System.out.println("I want to beat Brock!");
