	//I want to beat Brock!
	public static ArrayList Brock(){
		//Make second array list 
		ArrayList roster = new ArrayList(); 
		ArrayList pokedex = new ArrayList();
			for(int i = 0; i < classitsin.bigArrayList.size(); i++){
				if(PokeInput.temp.get(i).equals("Grass")||fulldex.get(i).equals("Water")||classitsin.bigArrayList.get(i).equals("Fighting")){
					pokedex.add(((ArrayList) PokeMain.fulldex).get(i));
				}
			}
			Random rand = new Random();
			for(int i = 0; i < 6; i++){
				roster.add(pokedex.get(rand.nextInt(pokedex.size())));
			}
			return roster; 
	}
	
	
		//I want to beat Misty!
				public static ArrayList Misty(){
					//Make second array list 
					ArrayList roster = new ArrayList(); 
					ArrayList pokedex = new ArrayList();
					for(int i = 0; i < Pkmn.size(); i++){
						if(Pkmn.get(i).equals("Grass")||Pkmn.get(i).equals("Water")||Pkmn.get(i).equals("Fighting")){
							pokedex.add(Pkmn.get(i));
							}
						}
						Random rand = new Random();
						for(int i = 0; i < 6; i++){
							roster.add(pokedex.get(rand.nextInt(pokedex.size())));
						}
						return roster;
				}
				
